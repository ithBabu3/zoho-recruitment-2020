#include<stdio.h>
    int main()
    {
        int i,j,k,l,n;
        printf("Input:");
        scanf("%d",&n);
        for(i=0;i<=n+1;i++)
        {
            for(j=n+1;j>i;j--)
            {
                printf(" ");
            }

            for(k=i-1;k>=0;k--)
            {
                printf("%d",k);
            }

            for(l=1;l<i;l++)
                printf("%d",l);
            printf("\n");
        }
        return 0;
    }
